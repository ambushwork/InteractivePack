<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.netatmo.ylu.interactivepack.coordinator.core.GlowCircleView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/dialog_image_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:transitionName="avatar_img"
            android:padding="16dp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@id/dialog_image_view"
              app:layout_constraintTop_toTopOf="@id/dialog_image_view"
              app:layout_constraintBottom_toBottomOf="@id/dialog_image_view"
              android:padding="16dp"
              android:text="person detail"/>

</androidx.constraintlayout.widget.ConstraintLayout>